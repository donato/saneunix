# Set up editor
set -o vi
export EDITOR=vim

#Prompt colour scheme
export PS1='[\[\033[31;1m\u\[\033[0m@\[\033[34;1m\h\[\033[0m \[\033[32m\w\[\033[0m]>> '

# When using history commmand do not view duplicatesgg
export HISTCONTROL=ignoredups

# Misc
export GREP_OPTIONS='--color=auto'

# Colored Man Pages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'                          
export LESS_TERMCAP_so=$'\E[01;44;33m'                                
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# Aliases
alias ls='ls --color=auto'
alias screen='screen -dR'
alias gj='grep -r --include="*.js" --exclude="*.min.js" --exclude-dir="node_modules"'
alias gjc='grep -r --include="*.js" --include="*.css" --exclude="*.min.js" --exclude="*.min.css" --exclude-dir="node_modules"'

export PATH=./node_modules/.bin:$PATH
